{
  "version": "2.0",
  "default_backend": "sqlite",
  "data_root": "data",

  "backends": {
    "sqlite": {
      "type": "sqlite",
      "database": "data/sqlite/vibecforms.db",
      "timeout": 10,
      "check_same_thread": false
    }
  },

  "form_mappings": {
    "clientes": "sqlite",
    "funcionarios": "sqlite",
    "acreditadores": "sqlite",
    "metodologias": "sqlite",
    "classificacao": "sqlite",
    "tipo_amostra": "sqlite",
    "amostra_especifica": "sqlite",
    "analises": "sqlite",
    "parciais": "sqlite",
    "matriz": "sqlite",
    "orcamento": "sqlite",
    "amostra": "sqlite",
    "fracionamento": "sqlite",
    "resultado": "sqlite",
    "laudo": "sqlite",
    "*": "default_backend"
  },

  "auto_create_storage": true,
  "auto_migrate_schema": true,
  "backup_before_migrate": true,
  "backup_path": "backups/migrations/"
}
